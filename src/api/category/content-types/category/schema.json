{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "category"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[a-z]+$"
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "category"
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "featured_post": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::featured-post.featured-post",
      "inversedBy": "categories"
    }
  }
}
